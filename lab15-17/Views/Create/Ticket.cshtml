@model lab15_17.Models.Ticket

<h1>CreateTicket</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Ticket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Session" class="control-label"></label>
                <select asp-for="SessionId" class="form-control">
                    @{
                        foreach (var b in ViewBag.Sessions)
                        {
                            <option value="@b.Id">@b.Hour, @b.Minute</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
