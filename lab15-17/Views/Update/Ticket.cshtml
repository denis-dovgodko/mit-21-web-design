@model lab15_17.Models.Ticket

@{
    ViewData["Title"] = "Ticket";
}

<h1>Ticket</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Ticket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Seat" class="control-label"></label>
            <select asp-for="Id" class="form-control">
                @{
                    foreach (var b in ViewBag.Tickets)
                    {
                        <option value="@b.Id">@b.Seat місце,@b.Row ряд</option>
                    }
                }
            </select>
            <span asp-validation-for="Id" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Seat" class="control-label"></label>
                <input asp-for="Seat" class="form-control" />
                <span asp-validation-for="Seat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Row" class="control-label"></label>
                <input asp-for="Row" class="form-control" />
                <span asp-validation-for="Row" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session" class="control-label"></label>
                <select asp-for="SessionId" class="form-control">
                    @{
                        foreach (var b in ViewBag.Sessions)
                        {
                            <option value="@b.Id">@b.Hour:@b.Minute</option>
                        }
                    }
                </select>
                <span asp-validation-for="Session" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
