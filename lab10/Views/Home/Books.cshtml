@{
    ViewData["Title"] = "Books";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <div>
    <h3>Розпродаж книг</h3>
        <table>
            <tr>
                <td><p>Назва книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Ціна</p></td>
            </tr>
            @{
                foreach(var b in ViewBag.Books)
                {
                    <tr>
                        <td><p>@b.Name</p></td>
                        <td><p>@b.Author</p></td>
                        <td><p>@b.Price</p></td>
                        <td><a href="/Home/Buy/@b.Id">Купити</a></td>
                    </tr>
                }
            }
        </table>

    </div>
</div>